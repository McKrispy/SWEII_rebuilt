<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="groupf.recipeapp.controller.MainViewController">

   <left>
      <VBox prefWidth="200.0" spacing="15.0" styleClass="sidebar" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="sidebar-title" text="Cookbook">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets left="25.0" top="3.0" />
               </VBox.margin>
            </Label>
            <Separator>
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin></Separator>
            <Button maxWidth="Infinity" onAction="#handleSearchRecipes" styleClass="sidebar-button" text="Search Recipe" />
            <Button maxWidth="Infinity" onAction="#handleCreateNewRecipe" styleClass="sidebar-button" text="Create Recipe" />
            <Button maxWidth="Infinity" onAction="#handleRecommendedDishes" styleClass="sidebar-button" text="World Cuisines" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </left>

   <center>
      <VBox spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="header-title" text="Welcome to Digital Cookbook">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <VBox.margin>
                  <Insets left="95.0" />
               </VBox.margin>
            </Label>

            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <TextField fx:id="searchTextField" prefHeight="40.0" prefWidth="350.0" promptText="Enter Keywords to Search" styleClass="search-field" />
                  <Button fx:id="searchButton" mnemonicParsing="false" onAction="#handleSearchAction" prefHeight="40.0" styleClass="search-button" text="Search" />
               </children>
            </HBox>

            <ListView fx:id="recipeListView" VBox.vgrow="ALWAYS" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
