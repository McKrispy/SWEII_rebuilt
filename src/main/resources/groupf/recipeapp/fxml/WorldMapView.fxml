<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>

<BorderPane xmlns="http://javafx.com/javafx/20"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="groupf.recipeapp.controller.WorldMapController">
    <center>
        <WebView fx:id="worldMapWebView" prefHeight="700.0" prefWidth="1000.0"/>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="最近点击的国家代码:"/>
                <Label fx:id="countryCodeLabel" text="无"/>
            </HBox>
            <Button text="返回主菜单" onAction="#handleBackToMain"/>
        </VBox>
    </bottom>
</BorderPane>